<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ServiceRequestNotificationPreferenceFlow</fullName>
    <label>Service Request Notification Preference Flow</label>
    <processType>Flow</processType>
    <status>Active</status>
