            <field>NotificationOptIn__c</field>
            <value>{!NotificationOptIn}</value>
        </inputAssignments>
        <criteria>
            <field>Id</field>
            <operation>equals</operation>
            <value>{!recordId}</value>
        </criteria>
    </recordUpdates>
</Flow>