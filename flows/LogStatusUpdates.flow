<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <status>Active</status>
    <processType>Flow</processType>
    <recordTriggers>
        <recordTriggerType>RecordChange</recordTriggerType>
        <object>Service_Request__c</object>
        <triggerType>onUpdate</triggerType>
        <criteria>
            <field>Service_Request__c.Status__c</field>
            <operator>isChanged</operator>
        </criteria>
    </recordTriggers>
    <actions>
        <actionType>RecordUpdate</actionType>
        <description>Log status updates with timestamps and user details</description>
        <inputs>
            <input>
                <name>Service_Request__c.Status_History__c</name>
                <value>CONCAT(Service_Request__c.Status_History__c, NOW(), ' - ', $User.FirstName, ' ', $User.LastName, ': ', Service_Request__c.Status__c, '\n')</value>
            </input>
        </inputs>
    </actions>
</Flow>