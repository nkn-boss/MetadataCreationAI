<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LeadQualificationFlow</fullName>
    <status>Active</status>
    <processType>Flow</processType>
    <interviewLabel>Lead Qualification Process</interviewLabel>
    <description>Automatically update Qualification Status based on Lead Score</description>
    <startElementReference>start</startElementReference>
    <elements>
        <element>
            <name>start</name>
            <type>Start</type>
            <connector>
                <targetReference>decision</targetReference>
            </connector>
        </element>
        <element>
            <name>decision</name>
            <type>Decision</type>
            <connector>
                <targetReference>updateQualified</targetReference>
                <condition>
                    <leftValueReference>LeadScore__c</leftValueReference>
                    <operator>greaterThan</operator>
                    <rightValue>50</rightValue>
                </condition>
                <condition>
                    <leftValueReference>LeadScore__c</leftValueReference>
                    <operator>lessThanOrEqual</operator>
                    <rightValue>50</rightValue>
                </condition>
            </connector>
        </element>
        <element>
            <name>updateQualified</name>
            <type>Assignment</type>
            <connector>
                <targetReference>end</targetReference>
            </connector>
            <assignmentItems>
                <field>QualificationStatus__c</field>
                <value>Qualified</value>
            </assignmentItems>
        </element>
        <element>
            <name>end</name>
            <type>End</type>
        </element>
    </elements>
</Flow>