<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <processMetadataValues>
        <name>SLAReminder</name>
        <value>
            <stringValue>Reminder for SLA deadlines</stringValue>
        </value>
    </processMetadataValues>
    <startElementReference>Start</startElementReference>
    <elements>
        <action>
            <name>SendEmail</name>
            <actionType>emailAlert</actionType>
            <emailAlert>
                <emailTemplate>SLAReminderTemplate</emailTemplate>
                <recipients>
                    <recipientType>user</recipientType>
                    <recipient>Customer_Support_Agent</recipient>
                </recipients>
            </emailAlert>
        </action>
    </elements>
</Flow>