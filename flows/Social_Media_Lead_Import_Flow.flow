<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <processType>Flow</processType>
    <label>Social Media Lead Import Flow</label>
    <description>Flow to handle the import of leads from social media platforms</description>
    <triggerType>RecordCreateUpdate</triggerType>
    <recordObjectType>Social_Media_Lead__c</recordObjectType>
    <startElementReference>start</startElementReference>
    <elements>
        <element>
            <name>start</name>
            <type>Start</type>
            <triggerType>RecordCreateUpdate</triggerType>
            <recordObjectType>Social_Media_Lead__c</recordObjectType>
        </element>
        <element>
            <name>createLead</name>
            <type>RecordCreate</type>
            <inputAssignments>
                <field>LastName</field>
                <value>{!$Record.Campaign_Name__c}</value>
            </inputAssignments>
            <inputAssignments>
                <field>Company</field>
                <value>{!$Record.Platform__c}</value>
            </inputAssignments>
            <inputAssignments>
                <field>LeadSource</field>
                <value>Social Media</value>
            </inputAssignments>
            <object>Lead</object>
        </element>
        <element>
            <name>sendEmail</name>
            <type>EmailAlert</type>
            <emailTemplateName>New_Lead_Notification</emailTemplateName>
            <recipientType>Role</recipientType>
            <recipient>Marketing Team</recipient>
        </element>
    </elements>
</Flow>