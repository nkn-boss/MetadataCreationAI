<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LeadAcknowledgmentEmailFlow</fullName>
    <label>Lead Acknowledgment Email Flow</label>
    <processType>Flow</processType>
    <status>Active</status>
    <triggerType>RecordAfterSave</triggerType>
    <recordUpdate>
        <object>Lead</object>
        <criteria>
            <field>Lead.Status</field>
            <operation>equals</operation>
            <value>New</value>
        </criteria>
        <actions>
            <actionType>EmailAlert</actionType>
            <emailAlert>
                <emailTemplate>LeadAcknowledgmentTemplate</emailTemplate>
                <recipientType>Lead</recipientType>
            </emailAlert>
        </actions>
    </recordUpdate>
</Flow>